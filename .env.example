# ==================================
# SERVER CONFIGURATION
# ==================================
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000
API_VERSION=v1

# ==================================
# DATABASE CONFIGURATION
# ==================================
MONGODB_URI=mongodb://localhost:27017/eka-ai
MONGODB_TEST_URI=mongodb://localhost:27017/eka-ai-test

# MongoDB Admin (for production)
MONGO_USERNAME=admin
MONGO_PASSWORD=change-this-password

# ==================================
# REDIS CONFIGURATION
# ==================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# ==================================
# JWT CONFIGURATION
# ==================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRE=30d

# ==================================
# OPENAI CONFIGURATION
# ==================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_VISION_MODEL=gpt-4-vision-preview
OPENAI_WHISPER_MODEL=whisper-1

# ==================================
# GOOGLE OAUTH CONFIGURATION
# ==================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# ==================================
# SESSION CONFIGURATION
# ==================================
SESSION_SECRET=your-super-secret-session-key-change-this

# ==================================
# EMAIL CONFIGURATION
# ==================================
# Option 1: SMTP (e.g., Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Option 2: SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@eka-ai.com

# ==================================
# FILE STORAGE CONFIGURATION
# ==================================
# Storage type: 'local', 's3', or 'cloudinary'
STORAGE_TYPE=local

# Local Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=eka-ai-uploads
AWS_REGION=us-east-1

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ==================================
# RATE LIMITING
# ==================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================================
# CORS CONFIGURATION
# ==================================
CORS_ORIGIN=http://localhost:3000,http://localhost:5000
CORS_CREDENTIALS=true

# ==================================
# MONITORING & LOGGING
# ==================================
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# ==================================
# FEATURE FLAGS
# ==================================
ENABLE_WEBSOCKET=true
ENABLE_CACHING=true
ENABLE_QUEUE=true
ENABLE_2FA=true
ENABLE_ANALYTICS=true

# ==================================
# PAYMENT CONFIGURATION (Optional)
# ==================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ==================================
# ADMIN CONFIGURATION
# ==================================
ADMIN_EMAIL=admin@eka-ai.com
ADMIN_PASSWORD=ChangeThisSecurePassword123!

# ==================================
# FRONTEND URL
# ==================================
FRONTEND_URL=http://localhost:3000

# ==================================
# API KEYS (for external services)
# ==================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
