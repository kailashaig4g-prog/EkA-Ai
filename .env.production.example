# Production Environment Variables
# Copy this file to .env and fill in the actual values

# Server
NODE_ENV=production
PORT=5000
API_VERSION=v1

# Database (REQUIRED)
MONGODB_URI=mongodb://username:password@host:27017/eka-ai
MONGO_USERNAME=admin
MONGO_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Redis (REQUIRED)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
REDIS_TLS=true

# JWT (REQUIRED - Generate strong random strings)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_STRONG_RANDOM_STRING
JWT_REFRESH_EXPIRE=30d

# OpenAI (REQUIRED)
OPENAI_API_KEY=sk-your-production-openai-api-key
OPENAI_ORG_ID=your-org-id
OPENAI_MODEL=gpt-4
OPENAI_VISION_MODEL=gpt-4-vision-preview
WHISPER_MODEL=whisper-1

# Email (REQUIRED)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Security
SESSION_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_STRING
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
# For production, use your actual domain
# For preview environments, you can add multiple origins separated by commas
# Example: CORS_ORIGIN=https://yourdomain.com,https://eka-garage.preview.emergentagent.com
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Admin User (REQUIRED for seeding)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://yourdomain.com/api/v1/auth/google/callback

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=eka-ai-uploads

# Cloudinary (Optional alternative to S3)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Features
ENABLE_2FA=true
ENABLE_NOTIFICATIONS=true
ENABLE_WEBSOCKET=true
